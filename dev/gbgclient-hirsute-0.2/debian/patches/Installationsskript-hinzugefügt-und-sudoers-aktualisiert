+++ gbgclient-hirsute-0.2/scripts/install_gbgclient.sh
@@ -0,0 +1,13 @@
+#!/bin/bash
+
+useradd -d /tmp/gbg gbg
+#Passwort für gbg setzen:
+passwd gbg
+#Gruppenzugehörigkeiten für gbg setzen
+adduser gbg dip
+adduser gbg netdev
+adduser gbg plugdev
+adduser gbg lpadmin
+adduser gbg dialout
+#bash als Default-Shell setzen
+chsh -s /bin/bash gbg 
